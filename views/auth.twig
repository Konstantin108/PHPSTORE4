{% extends 'layouts/main.twig' %}
{% block title %}
    {% if is_auth %}
        {{ user_name }}
    {% else %}
        вход
    {% endif %}
{% endblock %}
{% block header %}
    {% if is_auth %}
        {{ user_name }}
    {% else %}
        вход
    {% endif %}
{% endblock %}
{% block content %}

    {% if is_auth == false %}
        <h2>Для входа на сайт введите логин и пароль</h2>
        <br>
        <form method="post" action="/user/getAuth">
            <p>логин</p>
            <input type="text" name="login" id="login" placeholder="login">
            <p>пароль</p>
            <input type="text" name="password" id="password" placeholder="password">
            <br>
            <br>
            <input type="submit" class="pointer" value="Войти">
        </form>
    {% else %}
        <h2>Данные пользователя</h2>
        <br>
        {% if user_avatar %}
            <img src="/img/{{ user_avatar }}" alt="avatar" class="new_img_style">
        {% else %}
            <img src="/img/no_avatar.png" alt="avatar" class="new_img_style">
        {% endif %}
        <h2>Добро пожаловать, {{ user_name }}!</h2>
        <h2>Вы авторизованы под логином: {{ user_login }}</h2>
        <h2>Занимаемая должность: {{ user_position }}</h2>
        {% if user_is_admin == 1 %}
            <h2>Пользователь является администратором</h2>
        {% elseif user_is_admin == 2 %}
            <h2>Пользователь имеет расширенные права</h2>
        {% endif %}
        <br>
        <div style="display: flex">
            <a class="php-other-link php-red-link"
               style="display: flex;
                      margin-right: 4px;
                      justify-content: center;
                      align-items: center;
                      width: 57px;"
               href="/user/out">выход
            </a>
            <a class="php-other-link php-link-comment"
               style="display: flex;
                      justify-content: center;
                      align-items: center;"
               href="/comment/allComments">мои отзывы
            </a>
        </div>
    {% endif %}
    <br>
    <a class="php-link php-other-link" style="width: 94px;" href="/">на главную</a>
    <hr>

{% endblock %}