{% extends 'layouts/main.twig' %}
{% block title %}
    корзина
{% endblock %}
{% block header %}
    корзина
{% endblock %}
{% block content %}

    <div style="display: flex; flex-wrap: wrap; width: 900px;">
        {% for item in goods_in_basket %}
            <div style="display: flex;
                        flex-direction: column;
                        justify-content: flex-end;
                        padding: 7px;
                        align-items: center;
                        margin-right: 20px;
                        margin-bottom: 20px;
                        height: 340px;
                        width: 260px;
                        border-radius: 12px;
                        border: 2px solid palegoldenrod;
            ">
                {% if item.img %}
                    <img src="/img/{{ item.img }}" alt="img" style="width: 200px; margin-bottom: 20px;">
                {% else %}
                    <img src="/img/no_img.jpg" alt="img" style="width: 200px; margin-bottom: 20px;">
                {% endif %}
                {{ item.name }}
                <div>
                    <p>количество</p>
                    <div style="display: flex; width: 70px; justify-content: space-between">
                        <a href="/basket/minus?id={{ item.id }}">
                            <i class="fas fa-minus"></i>
                        </a>
                        <p>{{ item.counter }}</p>
                        <a href="/basket/plus?id={{ item.id }}">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
                <div style="display: flex">
                    <p style="margin-right: 6px;">стоимость:</p>
                    <p>{{ item.price }}&#8381;</p>
                </div>
                <a href="/basket/delFromBasket?id={{ item.id }}">убрать из корзины</a>
            </div>
        {% else %}
            <h3 style="color: red">Корзина пуста</h3>
        {% endfor %}
    </div>
    {% if goods_in_basket %}
        <h1 style="color: purple">Общая сумма заказа: {{ total }}&#8381;</h1>
    {% endif %}

{% endblock %}