{% extends 'layouts/main.twig' %}
{% block title %}
    удаление товара {{ good.name }}
{% endblock %}
{% block header %}
    удаление товара {{ good.name }}
{% endblock %}
{% block content %}

    {% if user_is_admin %}

        <h2>удалить товар {{ good.name }}?</h2>
        <br>
        <h3 style="color: #F38191">Товар будет так же удалён из заказов пользователей</h3>
        <br>
        <div style="display: flex">
            <a class="php-other-link php-red-link"
               style="width: 37px;
                      margin-right: 4px;"
               href="/good/getDel?id={{ good.id }}">
                да
            </a>
            <a class="php-other-link php-green-link"
               style="width: 37px;"
               href="/good/one?id={{ good.id }}">
                нет
            </a>
        </div>
    {% else %}
        <h3 style="color: red">Необходимо обладать правами администратора</h3>
    {% endif %}

{% endblock %}